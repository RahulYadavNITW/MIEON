<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thenewboston.mieon.MobileVerification">

    <include layout="@layout/toolbar"
        android:id="@+id/toolBar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar">
        <TextView
            android:layout_marginTop="32dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleMessage"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            fontFamily="fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix"
            android:text="  Hi John! We need to verify your\nmobile number before proceeding"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circle"
            android:background="@drawable/circle"
            android:layout_below="@+id/titleMessage"
            android:layout_marginTop="48dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneImage"
                android:background="@drawable/icon_lock"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:hint="PHONE NUMBER"
            android:id="@+id/editTextPhoneNumber"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/circle"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:background="@null"
            fontFamily="fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix"
            />
        <TextView
            android:layout_width="278dp"
            android:layout_height="1dp"
            android:background="#66000000"
            android:layout_below="@+id/editTextPhoneNumber"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            />



    </RelativeLayout>

</RelativeLayout>
