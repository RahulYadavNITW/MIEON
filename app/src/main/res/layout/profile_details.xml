<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thenewboston.mieon.Profile">
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:layout_marginLeft="6dp"
            android:textColor="#999999"
            android:textSize="15sp"
            fontFamily="fonts/OpenSans-CondBold.ttf"
            tools:ignore="MissingPrefix"
            android:id="@+id/textDetails"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textDetails"
            android:id="@+id/dividerbelowtextdetails"
            android:background="#f2f2f2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timing: "
            android:id="@+id/textTiming"
            android:layout_below="@+id/dividerbelowtextdetails"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:textSize="15sp"
            fontFamily="fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 am - 8 pm (Mon to Sat)"
            android:layout_toRightOf="@+id/textTiming"
            android:id="@+id/timing"
            android:layout_alignBaseline="@+id/textTiming"
            android:textColor="#666666"
            android:textSize="15sp"
            fontFamily="fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Break: "
            android:id="@+id/textLunchBreak"
            android:layout_below="@+id/textTiming"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:textSize="15sp"
            fontFamily="fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 pm - 2:30 pm"
            android:layout_toRightOf="@+id/textLunchBreak"
            android:layout_below="@+id/timing"
            android:id="@+id/lunchBreak"
            android:layout_alignBaseline="@+id/textLunchBreak"
            android:textColor="#666666"
            android:textSize="15sp"
            fontFamily="fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERVICES"
            android:layout_marginLeft="6dp"
            android:textColor="#999999"
            android:textSize="15sp"
            fontFamily="fonts/OpenSans-CondBold.ttf"
            tools:ignore="MissingPrefix"
            android:id="@+id/textServices"
            android:layout_below="@+id/textLunchBreak"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textServices"
            android:id="@+id/dividerbelowtextservices"
            android:background="#f2f2f2"
            />

    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listviewServices"
        tools:listitem="@layout/profile_services_listrow"
        android:entries="@array/services_array"
        ></ListView>

</LinearLayout>